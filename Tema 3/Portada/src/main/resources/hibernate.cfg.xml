<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration SYSTEM
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/empresa_proyectos?createDatabaseIfNotExist=true</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">admin</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.use_sql_comments">true</property>
    <property name="hibernate.hbm2ddl.auto">create</property>
    <mapping class="modelo.Sede"/>
    <mapping class="modelo.Proyecto"/>
    <mapping class="modelo.DatosProfesionales"/>
    <mapping class="modelo.Departamento"/>
    <mapping class="modelo.CocheEmpresa"/>
    <mapping class="modelo.Empleado"/>
  </session-factory>
</hibernate-configuration>